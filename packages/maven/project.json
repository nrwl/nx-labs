{
  "name": "maven",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/maven/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["compile-java", "^build"],
      "options": {
        "outputPath": "dist/packages/maven",
        "main": "packages/maven/src/index.ts",
        "tsConfig": "packages/maven/tsconfig.lib.json",
        "assets": [
          "packages/maven/target/**/*",
          "packages/maven/*.md",
          {
            "input": "./packages/maven/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/maven/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/maven",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/maven",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/maven/jest.config.ts"
      }
    },
    "compile-java": {
      "command": "rm -rf target && mvn clean install -DskipTests",
      "options": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
